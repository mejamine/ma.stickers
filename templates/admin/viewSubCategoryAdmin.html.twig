
{% block body %}
<style>
body{
    margin:0;
    background-image:url("../../images/background2.jpg") ;
    background-size:cover;
    background-repeat:no-repeat;
    background-attachment: fixed;
    background-position: center;
}
header{
    height:10vh;
    background-color:black;
    color:white;
    margin:0;
    display:flex;
}
h1{
    margin-block-start: 0;
    margin-block-end: 0;
    margin:auto;
    width:94vw;
    justify-content:center;
    text-align:center;
}
.logo{
    background-image:url("../../images/logo.png") ;
    background-size:cover;
    background-repeat:no-repeat;
    background-position: center;
    border-radius:50px;
    width:3vw;
    margin-top:15px;
}
.side_logo{
    width:3vwpx;
}
.container{
    height:90vh;
    margin:0;
    text-align:center;
    box-sizing:border-box;
    justify-content:center;
    display:flex;
    flex-wrap: wrap;
    padding-top:20px;
}
.subCategory{
    text-align:center;
    justify-content:center;
    width:280px;
    height:400px;
    padding:20px;
}
img{
    height:250px;
    width:280px;
    border-radius:10px;
}
a{
    height:30px;
    width:200px;
    background-color:black;
    text-decoration:none;
    color:white;
    border-radius:10px;
    text-align:center;
    display:flex;
    justify-content:center;
    font-size:large;
    margin:auto;
    margin-top:10px;
    align-items:center;
    border:2px solid white;
}
.modify{
    height:25px;
    width:100px;
    background-color:#00264c;
    font-size:large;
}
.modify_image{
    height:25px;
    width:100px;
    background-color:#00464c;
    font-size:large;
}
.delete{
    height:25px;
    width:100px;
    background-color:#bd2929;
    font-size:large;
}
.add{
    height:30px;
    width:200px;
    background-color:green;
    font-size:x-large;
}
.logout{
    background-color:red;
    color:black;
    font-size:large;
    height:30px;
    width:100px;
}
.log_out{
    padding-top:20px;
    text-align:center;
    justify-content:center;
}
</style>
<header>
        <a href="{{path('admin')}}" class="logo"></a>
       <h1>Mr Admin, here's all {{category.name}} collections !</h1>
        <div class="side_logo"></div>
</header>
<div class="log_out">
            <center><a class="logout" href="{{path('security_logout')}}">Logout</a></center>
    </div>
<center><a class = "add" href="{{path('addSubCategory',{'id':category.id})}}">Add A SubCategory</a></center>
<div class="container" >
    
    {% for subCategory in subCategories %}
        <div class="subCategory">
            <img src="../../images/SubCategory/{{subCategory.image}}" alt="{{subCategory.name}}" class="image">
            <a href="{{ path('viewStickers', {'id':subCategory.id }) }}" class="link">{{subCategory.name}}</a>
            <a class="modify_image" href="{{path('updateSubCategoryImage',{'id':subCategory.id,'id2':category.id})}}">Modify I</a>
            <a class='modify' href="{{path('updateSubCategory',{'id':subCategory.id,'id2':category.id})}}">Modify</a>
            <a class='delete' href="{{path('deleteSubCategory',{'id':subCategory.id,'id2':category.id})}}" onclick="return confirm('Are you sure to delete!{{subCategory.name}}')">Delete</a>
        </div>
        
    {% endfor %}
</div>
{% endblock %}