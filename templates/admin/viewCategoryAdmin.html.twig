{% extends 'base.html.twig' %}
{% block body %}
<style>
*{
    box-sizing:border-box;
}
.container{
    height:90vh;
    margin:0;
    text-align:center;
    box-sizing:border-box;
    justify-content:center;
}
body{
    margin:0;
    background-image:url("../../public/images/background2.jpg") ;
    background-size:cover;
    background-repeat:no-repeat;
    background-attachment: fixed;
    background-position: center;
}
header{
    height:10vh;
    background-color:black;
    color:white;
    margin:0;
    display:flex;
}
h1{
    margin-block-start: 0;
    margin-block-end: 0;
    margin:auto;
    width:94vw;
    justify-content:center;
    text-align:center;
}
.logo{
    background-image:url("../../public/images/logo.png") ;
    background-size:cover;
    background-repeat:no-repeat;
    background-position: center;
    border-radius:50px;
    width:3vw;
    margin-top:15px;
}
.side_logo{
    width:3vwpx;
}
h2{
    width:400px;
    height:50px;
    border-radius:10px;
    margin-block-start: 0;
    margin-block-end: 0;
    background-color:black;
    color:white;
    padding-top:8px;
}
center{
    padding-top:20px;
}
.links{
    display:flex;
    justify-content:center;
    padding-top:20px;
    flex-wrap: wrap;
}
a{
    height:40px;
    width:150px;
    background-color:black;
    text-decoration:none;
    color:white;
    border-radius:10px;
    margin:10px;
    text-align:center;
    display:flex;
    justify-content:center;
    padding:auto;
    font-size:xx-large;
    border:2px solid white;
}
.modify{
    height:25px;
    width:100px;
    background-color:#00264c;
    font-size:large;
}
.delete{
    height:25px;
    width:100px;
    background-color:#bd2929;
    font-size:large;
}
.add{
    height:30px;
    width:200px;
    background-color:green;
    font-size:x-large;
}
.logout{
    background-color:red;
    color:black;
    font-size:large;
    height:30px;
    width:100px;
}
.log_out{
    padding-top:20px;
    text-align:center;
    justify-content:center;
}
</style>
    <header>
        <a href="{{path('admin')}}" class="logo"></a>
       <h1>Mr Admin, here's all the categories</h1>
        <div class="side_logo"></div>
    </header>
<div class="container">
    <div class="log_out">
            <center><a class="logout" href="{{path('security_logout')}}">Logout</a></center>
    </div>
    <center><a class = "add" href="{{path('addCategory')}}">Add A Category</a></center>
    <div class="links">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
        {% for category in categories %}
        <div>
        <center>
            <a href="{{ path('viewSubCategories', {'id':category.id }) }}">{{category.name}}</a>
            <a class='modify' href="{{path('updateCategory',{'id':category.id})}}">Modify</a>
            <a class='delete' href="{{path('deleteCategory',{'id':category.id})}}" onclick="return confirm('Are you sure to delete!{{category.name}}')">Delete</a>
        </center>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
