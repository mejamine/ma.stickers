{% extends 'base.html.twig' %}
{% block body %}
<style>
body{
    margin:0;
    background-image:url("../../public/images/background2.jpg") ;
    background-size:cover;
    background-repeat:no-repeat;
    background-attachment: fixed;
    background-position: center;
}
label
{
    width:150px;
    height:40px;
    border-radius:10px;
    margin-block-start: 0;
    margin-block-end: 0;
    background-color:black;
    color:white;
    padding-top:8px;
    display:flex;
    font-size:xx-large;
    text-align:center;
    justify-content:center;
    padding:auto;
}
    .form{
        width:50vw;
        margin:auto;
        height:60vh;
        padding-top:50px;

    }
    input{
        display:block;
        width:300px;
        border-radius:20px;
        margin:20px;
        text-align:center;
        height:30px;
        font-size:x-large;
    }
    button{
        border-radius:20px;
        margin:20px;
        height:40px;
        width:150px;
        background-color:black;
        color:white;
        font-size:xx-large;
        border:2px solid white;
    }
    header{
    height:10vh;
    background-color:black;
    color:white;
    margin:0;
    justify-content:center;
    text-align:center;
    display:flex;
    align-content: space-around;

}
.container{
    height:90vh;
    margin:0;
    text-align:center;
    box-sizing:border-box;
    justify-content:center;
}
</style>
<header>
    <h2>Add A Category</h2>
</header>
<div class="container">
<div class="form">
    <center>
        {{ form_start (f) }}
             {{ form_widget (f) }}
        {{ form_end (f) }}
    </center>
</div>
</div>
{% endblock %}