
{% block body %}
<style>
body{
    margin:0;
    background-image:url("../../../../images/background2.jpg") ;
    background-size:cover;
    background-repeat:no-repeat;
    background-attachment: fixed;
    background-position: center;
}
header{
    height:10vh;
    background-color:black;
    color:white;
    margin:0;
    display:flex;
}
h1{
    margin-block-start: 0;
    margin-block-end: 0;
    margin:auto;
    width:94vw;
    justify-content:center;
    text-align:center;
}
.logo{
    background-image:url("../../../../images/logo.png") ;
    background-size:cover;
    background-repeat:no-repeat;
    background-position: center;
    border-radius:50px;
    width:3vw;
    margin-top:15px;
}
.side_logo{
    width:3vwpx;
}
.container{
    height:90vh;
    margin:0;
    text-align:center;
    box-sizing:border-box;
    justify-content:center;
    display:flex;
    flex-wrap: wrap;
    padding-top:20px;
}
.subCategory{
    text-align:center;
    justify-content:center;
    width:280px;
    height:280px;
    padding:20px;
}
img{
    height:250px;
    width:280px;
    border-radius:10px;
}
a{
    height:30px;
    width:200px;
    background-color:black;
    text-decoration:none;
    color:white;
    border-radius:10px;
    text-align:center;
    display:flex;
    justify-content:center;
    font-size:large;
    margin:auto;
    margin-top:10px;
    align-items:center;
        border:2px solid white;
}
.logout{
    background-color:red;
    color:black;
    font-size:large;
    height:30px;
    width:100px;
    margin:0;
}
.log_out{
    padding-top:10px;
    text-align:center;
    justify-content:center;
}
</style>
<header>
        <a href="{{path('users',{'id':id})}}" class="logo"></a>
       <h1>Explore our {{category.name}} collections !</h1>
       <div class="side_logo"></div>
</header>
<div class="log_out">
            <center><a class="logout" href="{{path('security_logout')}}">Logout</a></center>
    </div>
<div class="container" >
    {% for subCategory in subCategories %}
        <div class="subCategory">
            <img src="../../../../images/SubCategory/{{subCategory.image}}" alt="{{subCategory.name}}" class="image">
            <a href="{{ path('app_sticker', {'id':subCategory.id ,'id1':id}) }}" class="link">{{subCategory.name}}</a>
        </div>
        
    {% endfor %}
</div>
{% endblock %}