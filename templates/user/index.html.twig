{% extends 'base.html.twig' %}
{% block body %}
<style>
*{
    box-sizing:border-box;
}
.container{
    height:90vh;
    margin:0;
    text-align:center;
    box-sizing:border-box;
    justify-content:center;
}
a{
    height:30px;
    width:200px;
    background-color:black;
    text-decoration:none;
    color:white;
    border-radius:10px;
    text-align:center;
    display:flex;
    justify-content:center;
    font-size:large;
    margin:auto;
    margin-top:10px;
    align-items:center;
        border:2px solid white;
}
body{
    margin:0;
    background-image:url("../../public/images/background2.jpg") ;
    background-size:cover;
    background-repeat:no-repeat;
    background-attachment: fixed;
    background-position: center;
}
header{
    height:10vh;
    background-color:black;
    color:white;
    margin:0;
    display:flex;
}
h1{
    margin-block-start: 0;
    margin-block-end: 0;
    margin:auto;
    width:94vw;
    justify-content:center;
    text-align:center;
}
.logo{
    background-image:url("../../public/images/logo.png") ;
    background-size:cover;
    background-repeat:no-repeat;
    background-position: center;
    border-radius:50px;
    width:3vw;
    margin-top:15px;
}
.side_logo{
    width:3vwpx;
}
h2{
    width:400px;
    height:50px;
    border-radius:10px;
    margin-block-start: 0;
    margin-block-end: 0;
    background-color:black;
    color:white;
    padding-top:8px;
}
center{
    padding-top:20px;
}
table{
    width:95vw;
    margin:auto;
    margin-top:10px;
    background-color:black;
    color:white;
    border-radius:10px;
   }
td{
    text-align:center;
}
.delete{
    height:25px;
    width:100px;
    background-color:#bd2929;
    font-size:large;
    margin:auto;
}
.add{
    height:30px;
    width:200px;
    background-color:green;
    font-size:x-large;
}
.logout{
    background-color:red;
    color:black;
    font-size:large;
    height:30px;
    width:100px;
}
.log_out{
    padding-top:20px;
    text-align:center;
    justify-content:center;
}
.buttons{
        text-align:center;
        justify-content:center;
    }
</style>
    <header>
        <a href="{{path('admin')}}" class="logo"></a>
       <h1>Mr Admin, here's all the users</h1>
        <div class="side_logo"></div>
    </header>
<div class="container">
    <div class="log_out">
            <center><a class="logout" href="{{path('security_logout')}}">Logout</a></center>
    </div>
    <center><a class = "add" href="{{path('addUser')}}">Add A User</a></center>
    <table class="table" border="1">
    <thead>
        <tr>
            <th>#</th>
            <th>email</th>
            <th>username</th>
            <th>role</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{user.id}}</td>
            <td>{{user.email}}</td>
            <td>{{user.username}}</td>
            <td>{{user.roles[0]}}</td>
            <td class="buttons">
            <a href="{{path('viewOrder',{'id':user.id})}}">View Orders</a>
            <a class='delete' href="{{path('deleteUser',{'id':user.id})}}" onclick="return confirm('Are you sure to delete! {{user.username}}')">Delete</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
